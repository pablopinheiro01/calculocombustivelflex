<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listaReabastecimentoFragment">

    <fragment
        android:id="@+id/listaReabastecimentoFragment"
        android:name="br.com.calculadora.calculocombustivel.ui.fragment.HomeFragment"
        android:label="Lista de Reabastecimentos"
        tools:layout="@layout/lista_reabastecimento">
        <action
            android:id="@+id/action_listaReabastecimentoFragment_to_cadastroFragment"
            app:destination="@id/cadastroFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/cadastroFragment"
        android:name="br.com.calculadora.calculocombustivel.ui.fragment.CadastroFragment"
        android:label="Cadastro"
        tools:layout="@layout/cadastro_itens">
        <argument
            android:name="itemId"
            android:defaultValue="0L"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/resumoCadastroFragment"
        android:name="br.com.calculadora.calculocombustivel.ui.fragment.ResumoChartFragment"
        android:label="Resumo de gasto" />
</navigation>